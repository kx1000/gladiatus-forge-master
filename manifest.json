{
    "manifest_version": 3,
    "name": "Gladiatus Forge Master",
    "description": "Gladiatus Forge Master is a browser extension that helps you with forging and smelting in Gladiatus.",
    "version": "0.4.0",
    "author": "Kacper Rogula",
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
    "browser_specific_settings": {
      "gecko": {
        "id": "gladiatus-forge@kx1000.cyou",
        "strict_min_version": "58.0"
      }
    },
    "content_scripts": [
      {
        "matches": [
          "*://*.gladiatus.gameforge.com/game/index.php*"
        ],
        "js": [
          "vendor/nice-select2.min.js", 
          "vendor/popper.js",
          "vendor/tippy.js",
          "searchbar.js",
          "components.js",
          "horrerum.js",
          "calculator.js"
        ],
        "css": [
          "vendor/nice-select2.min.css", 
          "style.css"
        ]
      }
    ],
    "host_permissions": [
      "https://gladiatus-compare.kx1000.cyou/*"
    ]
  }